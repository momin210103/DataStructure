{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ Temp",
            "type": "shell",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-Wall",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/temp.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": ["Run Temp.exe"]
        },
        {
            "label": "Run Temp.exe",
            "type": "shell",
            "command": "${fileDirname}/temp.exe && del ${fileDirname}/temp.exe",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
